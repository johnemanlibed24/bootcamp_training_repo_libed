<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.ui5.trng.sampleapp.controller.View1">
<Page id="page" title="{i18n>title}">
    <content>
    <FlexBox width="90%" id="box1" justifyContent="End" alignItems="End" alignContent="Center">
        <items>
        <sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" editable="true" layout="GridLayout" id="form0" backgroundDesign="Transparent">
            <sap.ui.layout.form:content>
                <sap.ui.core:Title text="" id="title2"/>
                
                <Label text="Name" id="label0"/>
                <Input width="100%" id="input0"/>

                <Label text="Street/No" id="label1"/>
                <Input width="100%" id="input1"/>
                <Input width="100%" id="input2"/>

                <Label text="Zip Code/City" id="label2"/>
                <Input width="100%" id="input3"/>
                <Input width="100%" id="input4"/>

                <Label xmlns:mvc="sap.ui.core.mvc" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns:sap.ui.core="sap.ui.core" xmlns="sap.m" text="Country" id="label2_copy"/>
