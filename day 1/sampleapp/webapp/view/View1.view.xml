        </sap.ui.layout.form:SimpleForm>
                <Button xmlns="sap.m" text="Save" id="button1" type="Accept"/><Button xmlns="sap.m" text="Clear" id="button2" type="Reject" press="onClickClear"/>
        </items>
    </FlexBox>    
    </content>
    </Page>
