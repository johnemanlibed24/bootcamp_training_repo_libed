<mvc:View controllerName="sapips.training.odata.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
  <Page id="page" title="{i18n>appTitle}">
    <Panel
      xmlns="sap.m" width="auto" expandable="false" expanded="true" id="panel0" backgroundDesign="Transparent">
      <headerToolbar>
        <Toolbar id="toolbar1" design="Transparent">
          <Title id="title0" text="Products"/>
        </Toolbar>
      </headerToolbar>
      <content>
        <Text text="Wide range of available products" id="text5"/>
      </content>
    </Panel>
    <Table
      id="listProduct"
      items="{
        path: '/Products',
        sorter: {
          path: 'ProductName',
          descending: false
        },
        filters: {
          path: 'Discontinued',
          operator: 'EQ',
          value1: false
        }
      }">
      <!-- Define Columns -->
      <columns>
        <Column id="productColumn">
          <header>
            <Label id="_IDGenLabel1" text="Product" />
          </header>
        </Column>
        <Column id="supplierColumn">
          <header>
            <Label id="_IDGenLabel2" text="Supplier ID" />
          </header>
        </Column>
        <Column id="priceColumn">
          <header>
            <Label id="_IDGenLabel3" text="Price" />
          </header>
        </Column>
      </columns>
      <!-- Define Row Template -->
      <items>
        <ColumnListItem id="_IDGenColumnListItem">
          <cells>
            <!-- Product Column using ObjectIdentifier -->
            <ObjectIdentifier id="_IDGenObjectIdentifier"
              title="{ProductName}"
              text="Product ID: {ProductID}" />
            <!-- Supplier ID Column using Text -->
            <Text id="_IDGenText" text="{SupplierID}" />
            <!-- Price Column using ObjectIdentifier -->
            <ObjectIdentifier id="_IDGenObjectIdentifier1"
              title="{UnitPrice}"
              text="{QuantityPerUnit}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </Page>
</mvc:View>